@import '../common/aboutCommon'
.cont img
  display none
.cont .show
  display block

.map
  width 100%
  position relative
  left 0
  top 0
  img
    width 100%
  .trigger
    width 100%
    height 50px
    background rgba(255,255,255,0.8)
    position absolute
    left 0
    top 0
    li
      width 100px
      height 30px
      line-height 30px
      font-size 14px
      text-align center
      background #fff
      border 1px solid #999
      color #999999
      position absolute
      cursor pointer
      &:hover
        border 1px solid #EA4C37
        background #EA4C37
        color #fff
    li.selected
      border 1px solid #EA4C37
      background #EA4C37
      color #fff
    li:nth-child(1)
      left 50%
      top 10px
      margin-left -180px
    li:nth-child(2)
      left 50%
      top 10px
      margin-left -50px
    li:nth-child(3)
      left 50%
      top 10px
      margin-left 80px
      
.connectInfo
  width 100%
  height 100px
  .moduleWrap
    margin 30px 35px
    width 93.27%//970px
    height 70px
    .moduleItem
      width 49%//480px
      h3
        font-size 14px
        color #666
        height 16px
      p
        font-size 12px
        color #999
        height 18px
        line-height 18px
    .borderLeft
      border-left 1px solid #f2f2f2
      width 46%//445px
      padding-left 35px
